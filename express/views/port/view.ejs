<div class="d-flex flex-column">
    <div class="m-auto d-flex p-4">
        <img class="" style="height: fit-content;" src="/app/images/<%=data._id + '/' + data.fileCover %>" />
        <div class="m-5">
            <a class="btn btn-danger mb-5" style="height: fit-content;" href="/update/<%=data._id %>">Изменить</a>
            <div class="col px-4 py-4" style="height: fit-content;">
                <div class="row">Title: <%- data.title %></div>
                <div class="row">Description: <%- data.description %></div>
                <div class="row">Authors: <%- data.authors %></div>
            </div>
        </div>


    </div>
    <div class="d-flex flex-column">
        <div class="m-auto my-4">Контент</div>
        <% data.fileBook.forEach(file=> {
            %>
            <img class="m-auto mb-4 w-50" src="/app/images/<%=data._id + '/' + file %>" />

            <% }) %>
    </div>
</div>